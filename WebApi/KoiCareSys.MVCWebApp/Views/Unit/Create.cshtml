@model UnitDto
@{
    ViewData["Title"] = "Create Unit";
}

<h2>Create Unit</h2>

<form id="create-unit-form">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UnitOfMeasure" class="control-label"></label>
        <input asp-for="UnitOfMeasure" class="form-control" />
        <span asp-validation-for="UnitOfMeasure" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FullName" class="control-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Information" class="control-label"></label>
        <input asp-for="Information" class="form-control" />
        <span asp-validation-for="Information" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MinValue" class="control-label"></label>
        <input asp-for="MinValue" class="form-control" />
        <span asp-validation-for="MinValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxValue" class="control-label"></label>
        <input asp-for="MaxValue" class="form-control" />
        <span asp-validation-for="MaxValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdealValue" class="control-label"></label>
        <input asp-for="IdealValue" class="form-control" />
        <span asp-validation-for="IdealValue" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WarningThreshold" class="control-label"></label>
        <input asp-for="WarningThreshold" class="form-control" />
        <span asp-validation-for="WarningThreshold" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CriticalThreshold" class="control-label"></label>
        <input asp-for="CriticalThreshold" class="form-control" />
        <span asp-validation-for="CriticalThreshold" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsActive" class="control-label"></label>
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AlertMessage" class="control-label"></label>
        <input asp-for="AlertMessage" class="form-control" />
        <span asp-validation-for="AlertMessage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div id="message"></div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#create-unit-form").submit(function (event) {
                event.preventDefault(); // Prevent the form from submitting via the browser

                var unit = {
                    Id: '00000000-0000-0000-0000-000000000000', // Default GUID, can be omitted if the server generates it
                    Name: $("#create-unit-form input[name='Name']").val(),
                    UnitOfMeasure: $("#create-unit-form input[name='UnitOfMeasure']").val(),
                    FullName: $("#create-unit-form input[name='FullName']").val(),
                    Information: $("#create-unit-form input[name='Information']").val(),
                    MinValue: parseFloat($("#create-unit-form input[name='MinValue']").val()),
                    MaxValue: parseFloat($("#create-unit-form input[name='MaxValue']").val()),
                    IdealValue: parseFloat($("#create-unit-form input[name='IdealValue']").val()),
                    WarningThreshold: parseFloat($("#create-unit-form input[name='WarningThreshold']").val()),
                    CriticalThreshold: parseFloat($("#create-unit-form input[name='CriticalThreshold']").val()),
                    IsActive: $("#create-unit-form input[name='IsActive']").is(":checked"),
                    Description: $("#create-unit-form input[name='Description']").val(),
                    AlertMessage: $("#create-unit-form input[name='AlertMessage']").val()
                };

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Create", "Unit")',
                    contentType: "application/json",
                    data: JSON.stringify(unit),
                    success: function (response) {
                        $("#message").html('<div class="alert alert-success">Unit created successfully!</div>');
                        setTimeout(() => {
                            window.location.href = 'https://localhost:7050/Unit';
                        }, 3000)
                    },
                    error: function (xhr, status, error) {
                        var errorMessage = xhr.status + ': ' + xhr.statusText;
                        $("#message").html('<div class="alert alert-danger">Error - ' + errorMessage + '</div>');
                    }
                });
            });
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

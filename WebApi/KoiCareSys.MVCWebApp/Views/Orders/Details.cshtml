@model KoiCareSys.Data.Models.Order

<h2>Order Details - @Model.Id</h2>

<div>
    <p><strong>Create Date:</strong> @Model.CreateDate</p>
    <p><strong>Order Date:</strong> @Model.OrderDate</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Total:</strong> @Model.Total</p>
</div>

<h3>Order Details</h3>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.Name</td>
                <td>@detail.Quantity</td>
                <td>@detail.Price</td>
                <td>@detail.Subtotal</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

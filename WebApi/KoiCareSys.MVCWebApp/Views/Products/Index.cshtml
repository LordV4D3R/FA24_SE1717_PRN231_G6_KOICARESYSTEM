@model IEnumerable<KoiCareSys.Data.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="get" action="@Url.Action("Search", "Products")" style="margin-bottom: 20px;">
    <input type="text" name="name" id="searchNameInput" placeholder="Search by Name"
           value="@(string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["name"]) ? "" : ViewContext.HttpContext.Request.Query["name"])" style="width: 300px; padding: 5px;" />
    <input type="text" name="description" id="searchCategoryInput" placeholder="Search by description"
           value="@(string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["description"]) ? "" : ViewContext.HttpContext.Request.Query["description"])" style="width: 300px; padding: 5px;" />
    <input type="text" name="minValue" id="searchOriginInput" placeholder="Search by MinValue"
           value="@(string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["minValue"]) ? "" : ViewContext.HttpContext.Request.Query["minValue"])" style="width: 300px; padding: 5px;" />
    <input type="text" name="maxValue" id="searchOriginInput" placeholder="Search by MaxPrice"
           value="@(string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["maxValue"]) ? "" : ViewContext.HttpContext.Request.Query["maxValue"])" style="width: 300px; padding: 5px;" />
    <button type="submit">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalSold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalSold)
                </td>
                <td>
                    <img src="@item.ImgUrl" alt="@item.Name" width="100" height="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isDeleted)
                </td>
                <td>
                    <a asp-action="AddToCart" asp-route-id="@item.Id">Add to Cart</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
}
    </tbody>
</table>

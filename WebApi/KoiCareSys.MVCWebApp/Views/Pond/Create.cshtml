@model KoiCareSys.MVCWebApp.Models.PondDto

<h2>Create Pond</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PondName" class="control-label"></label>
        <input asp-for="PondName" class="form-control" />
        <span asp-validation-for="PondName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Volume" class="control-label"></label>
        <input asp-for="Volume" class="form-control" step="0.01" />
        <span asp-validation-for="Volume" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Depth" class="control-label"></label>
        <input asp-for="Depth" class="form-control" step="0.01" />
        <span asp-validation-for="Depth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DrainCount" class="control-label"></label>
        <input asp-for="DrainCount" class="form-control" />
        <span asp-validation-for="DrainCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SkimmerCount" class="control-label"></label>
        <input asp-for="SkimmerCount" class="form-control" />
        <span asp-validation-for="SkimmerCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PumpCapacity" class="control-label"></label>
        <input asp-for="PumpCapacity" class="form-control" step="0.01" />
        <span asp-validation-for="PumpCapacity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Note" class="control-label"></label>
        <textarea asp-for="Note" class="form-control"></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImgUrl" class="control-label"></label>
        <input asp-for="ImgUrl" class="form-control" />
        <span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="">Select Status</option>
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
            <option value="Suspended">Suspended</option>
            <option value="Deleted">Deleted</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsQualified" class="control-label"></label>
        <input type="checkbox" id="IsQualified" name="IsQualified" value="true" @(Model.IsQualified == true ? "checked" : "") />
        <span asp-validation-for="IsQualified" class="text-danger"></span>
    </div>
    <input type="hidden" name="IsQualified" value="false" />

    <div class="form-group">
        <label asp-for="UserId" class="control-label">User</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KoiCareSys.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMj4D4C5eP9/m9sBghcR65mDuvPgn1up2Bht57" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" type="text/css" media="all" asp-append-version="true" />
    <link rel="stylesheet" href="~/KoiCareSys.WebApp.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-image: url(https://tailwindui.com/plus/img/beams-home@95.jpg);
            background-size: cover;
        }



        header {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        nav {
            background-color: #fff;
            color: black;
        }

        .nav-link:hover {
            text-decoration: underline; /* Underline on hover for links */
        }

        .container {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        footer {
            /* background-color: #efedf0; /* Match footer with nav */ */
            color: black;
            padding: 15px 0;
            text-align: center;
        }

            footer a {
                color: #ffffff;
                transition: color 0.3s;
            }

                footer a:hover {
                    color: #cccccc; /* Lighten link color on hover */
                }
        /* Button Styles */
        .btn-custom {
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
            transition: background-color 0.3s, transform 0.3s;
        }

            .btn-custom:hover {
                background-color: #218838;
                transform: translateY(-2px); /* Slight lift effect */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">KoiCareSys.WebApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index"><i class="fas fa-home"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/KoiPage/KoiIndex"><i class="fas fa-users"></i>Koi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/UserPage/UserIndex"><i class="fas fa-users"></i> Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Unit/Index"><i class="fas fa-cube"></i> Unit</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/PondPage/PondIndex"><i class="fas fa-water"></i> Pond</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/KoiRecordPage/Index"><i class="fas fa-fish"></i> Koi Record</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/DevelopmentStagePage/Index"><i class="fas fa-chart-line"></i> Development Stage</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Measurement/Index"><i class="fas fa-ruler-combined"></i> Measurement</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - KoiCareSys.WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.12/signalr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

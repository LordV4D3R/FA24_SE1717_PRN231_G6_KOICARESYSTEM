@page "{id:guid}"
@model KoiCareSys.WebApp.Pages.KoiPage.KoiDeleteModel
@{
    ViewData["Title"] = "Delete Koi";
}

<h2>Delete Koi</h2>

<form method="post">
    <div class="alert alert-danger">
        Are you sure you want to delete this Koi (@Model.Koi.Name)?
    </div>

    <input type="hidden" asp-for="Koi.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/KoiPage/KoiIndex" class="btn btn-secondary">Cancel</a>
</form>

@page
@model KoiCareSys.WebApp.Pages.KoiRecordPage.KoiRecordIndexModel
@{
    ViewData["Title"] = "Development Stage Page";
}
<!-- Container -->
<div id="container">
    <div class="shell">
        <!-- Main -->
        <div id="main">
            <div class="cl">&nbsp;</div>
            <!-- Content -->
            <div id="content">
                <!-- Box -->
                <div class="box">
                    <!-- Box Head -->
                    <div class="box-head">
                        <h2 class="left">Koi Record</h2>
                        <div class="right">
                            <label>Search Record</label>
                            <form method="post">
                                <input type="text" name="keyword" class="field small-field" />
                                <input type="submit" class="button" value="search" />
                            </form>
                        </div>
                    </div>
                    <!-- End Box Head -->
                    <!-- Table -->
                    <div class="table">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <th>No. </th>
                                <th>Id</th>
                                <th>Koi Id</th>
                                <th>Weight</th>
                                <th>Length</th>
                                <th>Physique</th>
                                <th>RecordAt</th>
                                <th>DevelopmentStage Id</th>
                                <th width="110" class="ac">Content Control</th>
                            </tr>

                            @if (Model.KoiRecords.Count == 0)
                            {
                                <tr>
                                    <td colspan="5">No records found.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model.KoiRecords)
                                {
                                    <tr class="@(Model.KoiRecords.IndexOf(item) + 1 % 2 == 0 ? "odd" : "")">
                                        <td>@(Model.KoiRecords.IndexOf(item) + 1)</td>
                                        <td>@item.Id</td>
                                        <td>@item.KoiId</td>
                                        <td>@item.Weight</td>
                                        <td>@item.Length</td>
                                        <td>@item.Physique</td>
                                        <td>@item.RecordAt</td>
                                        <td>@item.DevelopmentStageId</td>

                                        <td>
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="ico edit">Details</a>
                                            <a asp-page="./Update" asp-route-id="@item.Id" class="ico edit">Edit</a>
                                            <a href="#" class="ico del">Delete</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                    <!-- Table -->
                </div>
                <!-- End Box -->
            </div>
            <!-- End Content -->
            <div class="cl">&nbsp;</div>
        </div>
        <!-- Main -->
    </div>
</div>
<!-- End Container -->

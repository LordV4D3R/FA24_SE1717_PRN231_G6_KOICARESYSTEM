        <td class="text-center">
            <a asp-page="./ProductDelete" asp-route-id="@item.Id" class="ico del">Delete</a><a asp-page="./Edit" asp-route-id="@item.Id" class="ico edit">Edit</a>
        </td>
        }
    </tbody>
</table>
